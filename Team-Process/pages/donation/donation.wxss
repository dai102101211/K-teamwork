/* pages/donation/donation.wxss */
/*指示头*/
.rent-title
{
  width:100%;
  height:60px;
  background-color: #7CC083;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.rent-titleText{
  position: absolute;
  top:2%;
  left:50%;
  transform: translate(-50%,0%);
  color: #E3E2CD;
  font-size: 20px;
}

/*商品信息填入*/
.xinxi{
  position:absolute;
  display:flex;
  flex-direction: column;
  margin-top: 20px;
  left:3%;
}
.xinxi text{
  font-size: 20px;
  margin-top: 40px;
}
.xinxi text:nth-child(2){
  padding-bottom: 35px;
}

.Inputxin
{
  position:absolute;
  display:flex;
  flex-direction: column;
  margin-top: 30px;
  left:30%;
}
.Inputxin textarea{
  background-color:white;
  box-shadow: 0px 2px 7px #B1D9B5;
  font-size: 18px;
  width:231px;
  height:50px;
  margin-top: 17px;
}
.Inputxin textarea:nth-child(2)
{
  height:100px;
}

.picker{
  box-shadow: 0px 2px 7px #B1D9B5;
  width:95%;
  height:50px;
  line-height: 50px;
  padding-left: 10px;
  margin-top: 10px;
}

/*确认信息*/
.ok{
  position:absolute;
  bottom:5%;
  left:50%;
  transform: translate(-50%,0%);
  background-color: #7CC083;
  color: white;
}
