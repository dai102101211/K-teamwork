/* pages/rent/rent.wxss */
/*指示头*/
.rent-title
{
  width:100%;
  height:60px;
  background-color: #7CC083;

}
.rent-titleText{
  position: absolute;
  top:2%;
  left:50%;
  transform: translate(-50%,0%);
  color: #E3E2CD;
  font-size: 20px;
}
/*添加图片信息*/
/*提示图片*/
.add{
  position: relative;
  left:50%;
  transform:translate(-50%,50%);
  width: 50px;
  height: 50px;
}
.swPicture{
  height:217px;
  box-shadow: 0px 2px 7px #B1D9B5;
}
.swPicture .swiper-dots {
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5);
}
.picture
{
  width:100%;
  height:217px;
}

/*商品信息填入*/
.xinxi{
  position:absolute;
  display:flex;
  flex-direction: column;
  margin-top: 20px;
  left:3%;
}
.xinxi text{
  font-size: 20px;
  margin-top: 40px;
}
.xinxi text:nth-child(4){
  padding-bottom: 35px;
}

.Inputxin
{
  position:absolute;
  display:flex;
  flex-direction: column;
  margin-top: 30px;
  left:30%;
}
.Inputxin textarea{
  background-color:white;
  box-shadow: 0px 2px 7px #B1D9B5;
  font-size: 18px;
  width:231px;
  height:50px;
  margin-top: 17px;
}
.Inputxin textarea:nth-child(4)
{
  height:100px;
}

/*确认信息*/
.ok{
  position:absolute;
  bottom:5%;
  left:50%;
  transform: translate(-50%,0%);
  background-color: #7CC083;
  color: white;
}
