/* pages/select/select.wxss */
/*指示头*/
.rent-title
{
  width:100%;
  height:60px;
  background-color: #7CC083;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.rent-titleText{
  position:absolute;
  top:2%;
  left:50%;
  transform: translate(-50%,0%);
  color: #E3E2CD;
  font-size: 20px;
}
.Imgsousuo{
  position:absolute;
  width:26px;
  height:26px;
  transform: translate(100%,50%);

}
.input-placeholder {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #727272;
  line-height: 30rpx;
  opacity: 0.5;
}
/*搜索*/
.sousuo{
  margin: 20px;
  left:50%;
  width: 80%;
  height:50px;
  border-color:#B1D9B5;
  border-width: 12px;
  border-radius: 20px;
  border: 1px solid #7CC083;
  padding-left: 80rpx;
}


/*物品显示*/
.kuang
{
  position:relative;
  left:50%;
  transform: translate(-50%,0%);
  width:80%;
  border-radius: 12px;
  box-shadow: 0px 3px 7px #7CC083;
  margin-top: 30px;
}
.picture{
  position:absolute;
  left:5%;
  transform: translate(0%,20%);
  width:35%;
  height:70%;
  border-radius: 14px;
  border: 1px solid #7CC083;
  margin-top: -50%;
}
.kuang image{
  width:100%;
  height:100%;
}
.article{
  position:absolute;
  left:50%;
  top:20%;
  font-size:20px;
  font-size: 600;
}
.article view{
  margin-bottom: 40px;
}
