/* pages/home  page/home page.wxss */
/*图片*/
.title
{
  width:100%;
  margin-bottom: -10px;
}
.tian
{
  background-color: #FAFFDE;
  width: 100%;
  height:102rpx;
}
/*功能选择框*/
.select-wai
{
  position:absolute;
  left:50%;
  transform: translate(-50%,-20%);
  margin-top: -10px;
  width:85%;
  height:20%;
  background-color:#FFFF;
  box-shadow:0px 10px 18px #E0E0E0;
  border-radius: 16px;
}
/*选择功能*/
.select
{
  position: absolute;
  display:flex;
  left:50%;

  transform: translate(-45%,0%);
}
.select image{
  margin-right: 38px;
  width: 56px;
  height: 56px;
}
.select image:nth-child(3)
{
  width: 66px;
  height:66px;
}
.select-text{
  position:relative;
  display:flex;
  left:38%;
  top:140rpx;
}
.select-text text{
  font-weight:700;
}
.select-text text:nth-child(1)
{
  position: relative;
  left:-70px;
}
.select-text text:nth-child(2)
{
  position: relative;
  left:-10px;
}
.select-text text:nth-child(3)
{
  position: relative;
  right:-55px;
}

/*好物待选*/
.haowu{
  position:absolute;
  top:57%;
  left:2%;
  margin: 10px;
}
.haowu button{
  background-color: #7CC083;
  color: white;
  box-sizing: 12px;
  width: 100px;
  height:43px;
  line-height: 43px;
  margin-bottom: 10px;
}
.haowu image{
  width: 160px;
  height:160px;
  box-sizing: 12px;
}

/*捐赠*/
.juanzeng{
  position:absolute;
  top:57%;
  right:2%;
  margin: 10px;
}
.juanzeng button{
  background-color: #7CC083;
  color: white;
  box-sizing: 12px;
  width: 100px;
  height:43px;
  line-height: 43px;
  margin-bottom: 10px;
}
.juanzeng image{

  width: 150px;
  height:150px;
  box-sizing: 12px;
}

/*底部*/
.bottom canvas{
  position: absolute;
  bottom: 0px;
}
.bottom canvas:nth-child(1){
  background-color: #F9F9F9;
  width: 100%;
  height:63px;

}
.bottom canvas:nth-child(2)
{
  position: absolute;
  background-color: #9BCFA0;
  width: 142px;
  height: 64px;
}


.center image{
  position: absolute;
  display:flex;
  bottom: 3%;
  left:13%;
  height: 32px;
  width: 32px;
}
.center image:nth-child(3){
  position:absolute;
  left:50%;
}
.center image:nth-child(5){
  position:absolute;
  left:80%;
}

.center text{
  position: absolute;
  display: flex;
  bottom: 0%;
  left:13%;
}
.center text:nth-child(2)
{
  color: white;
}
.center text:nth-child(4)
{
  position:absolute;
  left:50%;
}
.center text:nth-child(6)
{
  position:absolute;
  left:80%;
}