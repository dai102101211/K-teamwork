/* pages/donation/donation.wxss */
/*指示头*/
.rent-title
{
  width:100%;
  height:60px;
  background-color: #7CC083;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.rent-titleText{
  position: absolute;
  top:2%;
  left:50%;
  transform: translate(-50%,0%);
  color: #E3E2CD;
  font-size: 20px;
}

/*商品信息填入*/
.Infor{
  position: absolute;
  top:13%;
  height:482px;
  width:364.17px;
}
/*背景*/
.display{
  height: 482px;
  width: 364.17px;
}

/*添加图片信息*/
/*提示图片*/
.add{
  position: absolute;
  top:5%;
  left:50%;
  transform:translate(-50%,50%);
  width: 50px;
  height: 50px;
}
.swPicture{
  position:absolute;
  top:20%;
  left:55%;
  transform: translate(-50%,-50%);
  height:116px;
  width: 200px ;
  box-shadow: 0px 2px 7px #B1D9B5;
}
.swPicture .swiper-dots {
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5);
}
.picture
{
  position:absolute;
  top:5%;
  width:100%;
  height:100%;
}

.inputInfo{
  position:absolute;
  top:20%;
  left: 56%;
  transform: translate(-50%,30%);
}
.inputInfo text{
  width:80px;
  transform: translate(0%,50%);
}
.inputInfo textarea{
  background-color:white;
  box-shadow: 0px 2px 7px #B1D9B5;
  font-size: 18px;
  width:230px;
  height:50px;
  margin-bottom: 20px;
  border-radius: 10px;
}

/*确认信息*/
.ok{
  position:absolute;
  bottom:5%;
  left:50%;
  transform: translate(-50%,0%);
  background-color: #7CC083;
  color: white;
}