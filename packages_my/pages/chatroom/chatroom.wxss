/* 我的一方的布局 */
.communicate-my{
  display: flex;
  position: relative;
  top:50rpx;
  right: 10rpx;
  justify-content: flex-end; /* 将元素放在右侧 */
}
.communicate-my image{
  position:relative; /* 子元素设置 absolute */
  right: 0; /* 固定右侧 */
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
}
.communicate-my text{
  position:absolute;
  top:-10rpx;
  right:200rpx;
  font-size: 45rpx;
}
#chat{
  display: inline-block;
  word-wrap: break-word;
  min-width: 50rpx; /* 设置最小宽度 */
  max-width: 500rpx; /* 设置最大宽度 */
  margin-top: 100rpx;
  position: relative;
  top:-50rpx;
  border: 1px solid black;
  border-radius: 20rpx;
  font-size: 45rpx;
  text-align: center;
}

.communicate-other{
  display: flex;
  position: relative;
  top:50rpx;
  margin-bottom: 25rpx;
}
.communicate-other image{
  position:relative; /* 子元素设置 absolute */
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
}
.communicate-other text{
  position: relative;
  top:-10rpx;
  font-size: 45rpx;
}
#chat-other{
  display: inline-block;
  word-wrap: break-word;
  min-width: 50rpx; /* 设置最小宽度 */
  max-width: 500rpx; /* 设置最大宽度 */
  margin-top: 100rpx;
