.container{
  width: 100%;
  min-height: 100vh;
  background-color: #f2f2f2;
}

.topbg{
  width: 100%;
  height: 200rpx;
  background-color: #7cc083;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  position: absolute;
  top: 0;
  text-align: center;
}
.topbg text{
  font-size: 50rpx;
  position: relative;
  top: 80rpx;
  color: #E3E2CD;
}

.inputs{
  background-color: #f9f9f9;
  width: 100%;
  height: 120rpx;
position: fixed;
bottom: 0;
display: flex;
}

.inputs input{
  border: 1px solid black;
  border-radius: 30rpx;
  height: 60rpx;
  width: 550rpx;
  position: relative;
  left: 40rpx;
  top: 20rpx;
  background-color: #ffffff;
}

.inputs image{
  height: 60rpx;
  width: 60rpx;
  position: relative;
  left: 80rpx;
  top: 20rpx;
}

.list{
  position:fixed;
  top:220rpx;
  width:100%;
  height: 1100rpx;
  box-sizing: border-box;
  padding-left:30rpx;
  padding-right:30rpx;
}
